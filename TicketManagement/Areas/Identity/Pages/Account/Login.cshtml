@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_TicketManagementLayout.cshtml";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-page">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="logo-container">
                    <i class="bi bi-ticket-perforated-fill"></i>
                </div>
                <h1>Welcome Back</h1>
                <p>Sign in to your account to continue</p>
            </div>
            
            <form id="account" method="post" class="login-form">
                <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger" role="alert"></div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email address" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        Remember me
                    </label>
                </div>
                
                <div class="login-button-container">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-login">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Log in
                    </button>
                </div>
                
                <div class="login-links">
                    <div class="forgot-links">
                        <a id="forgot-password" asp-page="./ForgotPassword">
                            <i class="bi bi-question-circle me-1"></i>Forgot password?
                        </a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                            <i class="bi bi-envelope me-1"></i>Resend confirmation
                        </a>
                    </div>
                </div>
            </form>
            
            <div class="register-section">
                <p>Don't have an account?</p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-register">
                    <i class="bi bi-person-plus me-2"></i>Register as a new user
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
