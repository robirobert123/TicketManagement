@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
    Layout = "~/Areas/Identity/Pages/_TicketManagementLayout.cshtml";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="resend-confirmation-page">
    <div class="resend-confirmation-container">
        <div class="resend-confirmation-card">
            <div class="resend-confirmation-header">
                <div class="logo-container">
                    <i class="bi bi-envelope-check-fill"></i>
                </div>
                <h1>Resend Confirmation</h1>
                <p>Enter your email to receive a new confirmation link</p>
            </div>
            
            <form method="post" class="resend-confirmation-form">
                <div asp-validation-summary="All" class="text-danger alert alert-danger" role="alert"></div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Email address" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="resend-button-container">
                    <button type="submit" class="btn btn-primary btn-resend">
                        <i class="bi bi-send-fill me-2"></i>Resend Confirmation
                    </button>
                </div>
                
                <div class="back-to-login">
                    <a asp-page="./Login">
                        <i class="bi bi-arrow-left"></i> Back to login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}