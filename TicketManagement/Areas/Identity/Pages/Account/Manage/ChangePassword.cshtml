@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<link rel="stylesheet" href="~/css/manage-account.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-sidebar">
        <div class="user-info">
            <div class="avatar">
                <i class="bi bi-person-circle"></i>
            </div>
            <h3>@User.Identity.Name</h3>
        </div>
        <div class="nav-links">
            <a class="nav-link" asp-page="./Index">
                <i class="bi bi-person me-2"></i> Profile
            </a>
            <a class="nav-link" asp-page="./Email">
                <i class="bi bi-envelope me-2"></i> Email
            </a>
            <a class="nav-link active" asp-page="./ChangePassword">
                <i class="bi bi-shield-lock me-2"></i> Password
            </a>
            <a class="nav-link" asp-page="./TwoFactorAuthentication">
                <i class="bi bi-phone me-2"></i> Two-factor authentication
            </a>
            <a class="nav-link" asp-page="./PersonalData">
                <i class="bi bi-file-earmark-text me-2"></i> Personal data
            </a>
        </div>
    </div>
    
    <div class="account-content">
        <div class="content-header">
            <h2><i class="bi bi-shield-lock-fill me-2"></i> Password Security</h2>
            <p>Update your password to keep your account secure</p>
        </div>
        
        <div class="form-card">
            <partial name="_StatusMessage" for="StatusMessage" />
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <div class="form-group">
                    <label asp-for="Input.OldPassword" class="form-label">
                        <i class="bi bi-key me-1"></i> Current Password
                    </label>
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.NewPassword" class="form-label">
                        <i class="bi bi-key-fill me-1"></i> New Password
                    </label>
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">
                        <i class="bi bi-check-circle me-1"></i> Confirm Password
                    </label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn-save">
                    <i class="bi bi-check-circle me-2"></i> Update password
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
