@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<link rel="stylesheet" href="~/css/manage-account.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-sidebar">
        <div class="user-info">
            <div class="avatar">
                <i class="bi bi-person-circle"></i>
            </div>
            <h3>@User.Identity.Name</h3>
        </div>
        <div class="nav-links">
            <a class="nav-link" asp-page="./Index">
                <i class="bi bi-person me-2"></i> Profile
            </a>
            <a class="nav-link active" asp-page="./Email">
                <i class="bi bi-envelope me-2"></i> Email
            </a>
            <a class="nav-link" asp-page="./ChangePassword">
                <i class="bi bi-shield-lock me-2"></i> Password
            </a>
            <a class="nav-link" asp-page="./TwoFactorAuthentication">
                <i class="bi bi-phone me-2"></i> Two-factor authentication
            </a>
            <a class="nav-link" asp-page="./PersonalData">
                <i class="bi bi-file-earmark-text me-2"></i> Personal data
            </a>
        </div>
    </div>
    
    <div class="account-content">
        <div class="content-header">
            <h2><i class="bi bi-envelope-fill me-2"></i> Email Management</h2>
            <p>Update your email address and verification status</p>
        </div>
        
        <div class="form-card">
            <partial name="_StatusMessage" for="StatusMessage" />
            <form id="email-form" method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                
                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-envelope me-1"></i> Current Email
                    </label>
                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="input-group">
                            <input asp-for="Email" class="form-control" disabled />
                            <span class="input-group-text text-success">
                                <i class="bi bi-check-circle-fill"></i>
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" disabled />
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn-link mt-2">
                                <i class="bi bi-envelope-check me-1"></i> Send verification email
                            </button>
                        </div>
                    }
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.NewEmail" class="form-label">
                        <i class="bi bi-envelope-plus me-1"></i> New Email
                    </label>
                    <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                </div>
                
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn-save">
                    <i class="bi bi-check-circle me-2"></i> Change email
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
