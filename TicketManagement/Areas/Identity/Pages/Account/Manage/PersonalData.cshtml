@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<link rel="stylesheet" href="~/css/manage-account.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-sidebar">
        <div class="user-info">
            <div class="avatar">
                <i class="bi bi-person-circle"></i>
            </div>
            <h3>@User.Identity.Name</h3>
        </div>
        <div class="nav-links">
            <a class="nav-link" asp-page="./Index">
                <i class="bi bi-person me-2"></i> Profile
            </a>
            <a class="nav-link" asp-page="./Email">
                <i class="bi bi-envelope me-2"></i> Email
            </a>
            <a class="nav-link" asp-page="./ChangePassword">
                <i class="bi bi-shield-lock me-2"></i> Password
            </a>
            <a class="nav-link" asp-page="./TwoFactorAuthentication">
                <i class="bi bi-phone me-2"></i> Two-factor authentication
            </a>
            <a class="nav-link active" asp-page="./PersonalData">
                <i class="bi bi-file-earmark-text me-2"></i> Personal data
            </a>
        </div>
    </div>
    
    <div class="account-content">
        <div class="content-header">
            <h2><i class="bi bi-file-earmark-person me-2"></i> Personal Data</h2>
            <p>Manage your personal information and account data</p>
        </div>
        
        <div class="form-card">
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            
            <div class="alert alert-warning mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </div>
            
            <div class="d-flex flex-wrap gap-3">
                <form id="download-data" asp-page="DownloadPersonalData" method="post">
                    <button class="btn-secondary" type="submit">
                        <i class="bi bi-download me-2"></i> Download data
                    </button>
                </form>
                
                <a id="delete" asp-page="DeletePersonalData" class="btn-danger">
                    <i class="bi bi-trash me-2"></i> Delete personal data
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
