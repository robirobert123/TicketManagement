@model TicketManagement.Models.TicketEditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-create row">
    <h1>Edit</h1>
    <div class="col-md-4">
        <form class="form-label" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TicketID" />
            <div class="ticket-section">
                <label for="TicketID">TicketID:</label>
                <p id="ticketID">@Model.TicketID</p>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" id="create-date-label" readonly="readonly" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedUser" class="control-label" ></label>
                <input asp-for="CreatedUser" class="form-control" id="createdby-label" readonly="readonly" />
                <span asp-validation-for="CreatedUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusID" class="control-label"></label>
                @* <select asp-for="PriorityID" name="priorityList" asp-items="Model.TicketPriorities"></select> *@
                @Html.DropDownListFor(model => model.StatusID, Model.TicketStatuses, new { @class = "drop-down", @id = "status-dropdown" })
            </div>
            <div class="form-group">
                <label asp-for="PriorityID" class="control-label"></label>
                @* <select asp-for="PriorityID" name="priorityList" asp-items="Model.TicketPriorities"></select> *@
                @Html.DropDownListFor(model => model.PriorityID, Model.TicketPriorities, new { @class = "drop-down", @id = "priority-dropdown" })
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                @* <select asp-for="PriorityID" name="priorityList" asp-items="Model.TicketPriorities"></select> *@
                @Html.DropDownListFor(model => model.CategoryID, Model.TicketCategories, new { @class = "drop-down", @id = "cateogry-dropdown" })
            </div>
            <div class="form-group">
                <label asp-for="Assignee" class="control-label"></label>
                @* <select asp-for="Assignee" name="assigneeList" asp-items="Model.TicketAssignees"></select> *@
                @Html.DropDownListFor(model => model.Assignee, Model.TicketAssignees, new { @class = "drop-down", @id = "assignee-dropdown" })
            </div>
            <div class="form-group">
                <button type="submit" class="edit-button">Save</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
