@model IEnumerable<DataAcces.AspNetUser>
@{
    ViewData["Title"] = "User Management";
}

<link rel="stylesheet" href="~/css/user-management.css" />

<div class="dashboard-wrapper">
    <div class="create-ticket-container">
        <div class="create-header">
            <h2><i class="bi bi-people-fill"></i> User Management</h2>
            <p>Manage all users in the system</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show alert-custom" role="alert">
                <i class="bi bi-check-circle-fill"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Failed"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show alert-custom" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>@TempData["Failed"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="create-form-container">
            <div class="page-header">
                <h5 class="page-title">All Users</h5>
                <div class="header-actions">
                    <a asp-action="AddUser" class="btn-action btn-primary">
                        <i class="bi bi-person-plus"></i>Add New User
                    </a>
                    <a asp-action="ManageRoles" class="btn-action btn-outline-primary">
                        <i class="bi bi-shield-lock"></i>Manage Roles
                    </a>
                </div>
            </div>

            <div class="user-table">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-person-fill me-2"></i>User</th>
                            <th><i class="bi bi-envelope me-2"></i>Email</th>
                            <th><i class="bi bi-calendar me-2"></i>Created</th>
                            <th><i class="bi bi-gear-fill me-2"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="user-info">
                                        <div class="avatar-circle">
                                            @(user.FirstName?.Substring(0, 1).ToUpper() ?? user.Email.Substring(0, 1).ToUpper())
                                        </div>
                                        <div class="user-details">
                                            <div class="user-name">@user.FirstName @user.LastName</div>
                                            <div class="user-email">@user.UserName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="user-email">@user.Email</div>
                                </td>
                                <td>
                                    <div class="status-indicator">
                                        @if (user.EmailConfirmed)
                                        {
                                            <span class="status-dot confirmed"></span>
                                            <span class="role-badge bg-success">Confirmed</span>
                                        }
                                        else
                                        {
                                            <span class="status-dot pending"></span>
                                            <span class="role-badge bg-warning">Pending</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="#" class="btn-action btn-outline-secondary">
                                            <i class="bi bi-eye"></i>View
                                        </a>
                                        <a href="#" class="btn-action btn-outline-primary">
                                            <i class="bi bi-pencil"></i>Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
