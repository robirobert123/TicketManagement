@model List<TicketManagement.Models.UserRolesModel>

@{
    ViewData["Title"] = "Manage User Roles";
}

<link rel="stylesheet" href="~/css/user-management.css" />

<div class="dashboard-wrapper">
    <div class="create-ticket-container">
        <div class="create-header">
            <h2><i class="bi bi-shield-lock"></i> Admin Panel</h2>
            <p>Comprehensive administration and user management</p>
        </div>

        <!-- Admin Navigation Tabs -->
        <div class="admin-nav-tabs mb-4">
            <ul class="nav nav-pills nav-fill" id="adminTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="users-tab" data-bs-toggle="pill" data-bs-target="#users-panel"
                            type="button" role="tab" aria-controls="users-panel" aria-selected="true">
                        <i class="bi bi-people-fill me-2"></i>User Management
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="roles-tab" data-bs-toggle="pill" data-bs-target="#roles-panel"
                            type="button" role="tab" aria-controls="roles-panel" aria-selected="false">
                        <i class="bi bi-shield-check me-2"></i>Role Management
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="system-tab" data-bs-toggle="pill" data-bs-target="#system-panel"
                            type="button" role="tab" aria-controls="system-panel" aria-selected="false">
                        <i class="bi bi-gear-fill me-2"></i>System Settings
                    </button>
                </li>
            </ul>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show alert-custom" role="alert">
                <i class="bi bi-check-circle-fill"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show alert-custom" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Tab Content -->
        <div class="tab-content" id="adminTabsContent">
            <!-- User Management Panel -->
            <div class="tab-pane fade show active" id="users-panel" role="tabpanel" aria-labelledby="users-tab">
                <div class="create-form-container">
                    <div class="page-header mb-4">
                        <h5 class="page-title">
                            <i class="bi bi-people-fill me-2"></i>User Management
                        </h5>
                        <div class="header-actions">
                            <a asp-action="AddUser" class="btn-action btn-primary">
                                <i class="bi bi-person-plus"></i>Add New User
                            </a>
                        </div>
                    </div>

                    <div class="user-table">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="bi bi-person-fill me-2"></i>User</th>
                                    <th><i class="bi bi-shield-check me-2"></i>Role</th>
                                    <th><i class="bi bi-gear-fill me-2"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="user-info">
                                                <div class="avatar-circle">
                                                    @user.Email.Substring(0, 1).ToUpper()
                                                </div>
                                                <div class="user-details">
                                                    <div class="user-name">@user.Email</div>
                                                    <div class="user-id">ID: @user.UserId</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <form asp-action="UpdateUserRole" method="post" class="role-update-form" id="role-form-@user.UserId">
                                                <input type="hidden" name="UserId" value="@user.UserId" />
                                                <div class="role-selector-inline">
                                                    <select name="SelectedRole" class="form-select role-dropdown">
                                                        <option value="">Select Role...</option>
                                                        @if (ViewBag.Roles != null)
                                                        {
                                                            @foreach (var role in ViewBag.Roles)
                                                            {
                                                                var isSelected = user.Roles != null && user.Roles.Contains(role);
                                                                <option value="@role" selected="@isSelected">@role</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                            </form>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <button type="submit" form="role-form-@user.UserId" class="btn-action btn-primary btn-sm">
                                                    <i class="bi bi-check-lg"></i>Update
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Role Management Panel -->
            <div class="tab-pane fade" id="roles-panel" role="tabpanel" aria-labelledby="roles-tab">
                <div class="create-form-container">
                    <div class="page-header mb-4">
                        <h5 class="page-title">
                            <i class="bi bi-shield-check me-2"></i>Role Management
                        </h5>
                        <div class="header-actions">
                            <button class="btn-action btn-primary" data-bs-toggle="modal" data-bs-target="#addRoleModal">
                                <i class="bi bi-plus-circle"></i>Add New Role
                            </button>
                        </div>
                    </div>

                    <div class="roles-grid">
                        @if (ViewBag.Roles != null)
                        {
                            @foreach (var role in ViewBag.Roles)
                            {
                                <div class="role-card">
                                    <div class="role-header">
                                        <i class="bi bi-shield-fill"></i>
                                        <h6>@role</h6>
                                    </div>
                                    <div class="role-stats">
                                        @{
                                            var usersWithRole = Model.Count(u => u.Roles != null && u.Roles.Contains(role));
                                        }
                                        <span class="user-count">@usersWithRole users</span>
                                    </div>
                                    <div class="role-actions">
                                        <button class="btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i>Edit
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- System Settings Panel -->
            <div class="tab-pane fade" id="system-panel" role="tabpanel" aria-labelledby="system-tab">
                <div class="create-form-container">
                    <div class="page-header mb-4">
                        <h5 class="page-title">
                            <i class="bi bi-gear-fill me-2"></i>System Settings
                        </h5>
                    </div>

                    <div class="settings-grid">
                        <div class="setting-card">
                            <div class="setting-icon">
                                <i class="bi bi-database"></i>
                            </div>
                            <div class="setting-content">
                                <h6>Database Management</h6>
                                <p>Backup, restore, and maintain database</p>
                                <button class="btn-sm btn-outline-primary">Manage</button>
                            </div>
                        </div>

                        <div class="setting-card">
                            <div class="setting-icon">
                                <i class="bi bi-graph-up"></i>
                            </div>
                            <div class="setting-content">
                                <h6>System Analytics</h6>
                                <p>View system performance and usage statistics</p>
                                <button class="btn-sm btn-outline-primary">View Reports</button>
                            </div>
                        </div>

                        <div class="setting-card">
                            <div class="setting-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                            <div class="setting-content">
                                <h6>Security Settings</h6>
                                <p>Configure authentication and authorization</p>
                                <button class="btn-sm btn-outline-primary">Configure</button>
                            </div>
                        </div>

                        <div class="setting-card">
                            <div class="setting-icon">
                                <i class="bi bi-envelope"></i>
                            </div>
                            <div class="setting-content">
                                <h6>Email Configuration</h6>
                                <p>Setup email notifications and templates</p>
                                <button class="btn-sm btn-outline-primary">Setup</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
